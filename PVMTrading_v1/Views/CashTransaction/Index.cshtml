@model List<PVMTrading_v1.Models.CashTransaction>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="card mb-3">
                <div class="card-header">
                    <h4>Cash Transactions</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <div id="dataTable_wrapper" class="dataTables_wrapper container-fluid">

                            <!-- Modal -->
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">


                                        @{Html.RenderAction("SearchCustomer", "CashTransaction");}


                                    </div>
                                </div>
                            </div>

                            @Html.ActionLink("New Cash Transaction", "ProductList", "SearchProduct", new { @class = "btn btn-primary" }, null)


                            @if (!Model.Any())
                            {
                                <p>We don't have any Transaction available yet.</p>
                            }
                            else
                            {
                                <table class="table table-bordered" id="cashtransact" style="margin: 0">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Customer</th>
                                            <td>Total Amount</td>
                                            <td>Discount</td>
                                            <th>Total Amount w/ Discount</th>
                                            <th>Date</th>
                                            <th>Remarks</th>
                                            <td>OR Number</td>

                                            <th>Is Void</th>
                                            <th>OR</th>
                                            <th></th>



                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var cash in Model)
                                        {

                                            <tr>
                                                <td>@cash.Id</td>
                                                <td>@cash.Customer</td>
                                                <td>@cash.OriginalTotalAmount</td>
                                                <td>@cash.TotalDiscountedAmount</td>
                                                <td>@cash.TotalAmount</td>
                                                <td>@cash.CashTransactionDate</td>
                                                <td>@cash.Remarks</td>

                                                <td>@cash.OR</td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = cash.Id }) | @Html.ActionLink("Edit", "Edit", new { id = cash.Id }) | @Html.ActionLink("Edit", "Edit", new { id = cash.Id })|
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{

    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#cashtransact').DataTable({

                "column": [
                    { "autowidth": true },
                    { "ScrollY": (0.6 * $(window).height()) }
                ]



            });
        });
    </script>
}

